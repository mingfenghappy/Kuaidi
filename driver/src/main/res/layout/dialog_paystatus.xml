<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/shape_rect_corner_white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:drawablePadding="20dp"
        android:drawableTop="@drawable/icon_showpay_success"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="27dp"
        android:paddingRight="27dp"
        android:text="已收到定金"
        android:textColor="@color/sb_text_blank"
        android:textSize="@dimen/text_nomal" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_paystatus_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.0"
            android:textColor="@color/com_text_blank_deep_light"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="元"
            android:textColor="@color/com_text_blank_deep_light"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showingroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/text_login_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18512546235"
            android:textColor="@color/com_text_blank"
            android:textSize="@dimen/text_subig" />

        <TextView
            android:id="@+id/btn_go_vali"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_rect_corner_none_line_light"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/com_text_dark"
            android:textSize="@dimen/text_nomal" />

    </LinearLayout>

    <com.sobey.common.view.EmojiEditText
        android:id="@+id/edit_login_vali"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="验证码"
        android:inputType="number"
        android:maxLength="6"
        android:singleLine="true"
        android:textColor="@color/sb_text_blank"
        android:textColorHint="@color/com_text_dark_light"
        android:textSize="@dimen/text_big" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--<TextView-->
        <!--android:id="@+id/btn_go"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginBottom="30dp"-->
        <!--android:background="@drawable/shape_rect_corner_yellow"-->
        <!--android:foreground="?attr/selectableItemBackground"-->
        <!--android:gravity="center"-->
        <!--android:text="下一步"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="@dimen/text_big" />-->

    <com.dd.CircularProgressButton
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00000000"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:textSize="@dimen/text_big"
        app:cpb_cornerRadius="4dp"
        app:cpb_colorIndicator="@color/kd_yellow"
        app:cpb_colorIndicatorBackground="@color/kd_yellow_hint_trans"
        app:cpb_colorProgress="#00000000"
        app:cpb_iconComplete="@drawable/ic_action_accept"
        app:cpb_iconError="@drawable/ic_action_cancel"
        app:cpb_selectorIdle="@drawable/idle_state_selector"
        style="?android:attr/borderlessButtonStyle"
        app:cpb_textIdle="下一步" />

</LinearLayout>
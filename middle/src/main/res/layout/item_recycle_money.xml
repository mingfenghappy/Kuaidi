<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_moneydetail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="支付"
            android:textColor="@color/com_text_blank"
            android:textSize="@dimen/text_nomal" />

        <TextView
            android:id="@+id/text_moneydetail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="2016-12-31 12:21"
            android:textColor="@color/com_text_blank"
            android:textSize="@dimen/text_nomal_small" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_moneydetail_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="-9.00元"
        android:textColor="@color/kd_weixin_green"
        android:textSize="@dimen/text_nomal" />

</LinearLayout>

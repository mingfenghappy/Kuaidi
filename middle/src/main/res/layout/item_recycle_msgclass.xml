<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">


    <ImageView
        android:id="@+id/img_msgclass_header"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_msgclass_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:text="订单消息"
                android:textColor="@color/sb_text_blank"
                android:textSize="@dimen/text_nomal" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:21"
                android:textColor="@color/sb_text_dark_blank"
                android:textSize="@dimen/text_nomal_small" />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/text_msgclass_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="你是一个大傻逼"
            android:textColor="@color/sb_text_dark_blank"
            android:textSize="@dimen/text_nomal_small" />


    </LinearLayout>


</LinearLayout>
